{
  "name": "example/slim-meilisearch",
  "description": "Slim + MySQL + Meilisearch example",
  "type": "project",
  "scripts": {
    "lint": "vendor/bin/php-cs-fixer fix",
    "phpstan": "vendor/bin/phpstan analyse --memory-limit 4048M src/",
    "phpunit": "phpunit --colors=always --testdox --fail-on-skipped",
    "test": [
      "@lint",
      "@phpstan",
      "@phpunit"
    ]
  },
  "require": {
    "ext-pdo": "*",
    "php": "^8.2",
    "slim/slim": "^4.13",
    "meilisearch/meilisearch-php": "^1.16",
    "guzzlehttp/guzzle": "^7.9",
    "symfony/console": "^7.4",
    "symfony/dotenv": "^7.4",
    "nyholm/psr7": "^1.8",
    "nyholm/psr7-server": "^1.1",
    "monolog/monolog": "^3.10",
    "php-di/php-di": "^7.1",
    "robmorgan/phinx": "^0.16.10"
  },
  "require-dev": {
    "jangregor/phpstan-prophecy": "^1.0",
    "phpspec/prophecy-phpunit": "^2.3",
    "phpstan/extension-installer": "^1.2.0",
    "phpstan/phpstan": "^1.12",
    "phpunit/phpunit": "^9.0",
    "friendsofphp/php-cs-fixer": "^3.94"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "phpstan/extension-installer": true
    }
  }
}
